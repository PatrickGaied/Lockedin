{
  "manifest_version": 3,
  "name": "Website Blocker",
  "version": "1.0",
  "permissions": [
    "declarativeNetRequest", 
    "declarativeNetRequestWithHostAccess",
    "browsingData",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "./src/popup.html",
    "default_icon": {
      "16": "./src/assets/icons/icon16.png",
      "48": "./src/assets/icons/icon48.png",
      "128": "./src/assets/icons/icon128.png"
    }
  }
}
